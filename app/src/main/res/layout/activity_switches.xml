<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Switches">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SWITCH CASES"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        />

    <ScrollView
        android:layout_height="300dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/menuInput"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Nomor menu"
            android:layout_marginEnd="50dp"
            />
        <EditText
            android:id="@+id/qtyInput"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Quantitas menu"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/orderBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@color/dark_blue"
            android:text="ORDER"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dispContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/disp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="25sp"
            android:text="2 Nasi goreng - Rp. 25,000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="15sp"
            android:text="Artizar Odion Brataseta\nPangeran Natanael Napitupulu\nAnargya Gilland Satria"/>
    </LinearLayout>

</LinearLayout>